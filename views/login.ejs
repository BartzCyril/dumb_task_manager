<script src="/js/auth-validation.js"></script>

<%- include('base/layout', {
body: `
<div class="row justify-content-center">
<div class="col-md-6">
<div>
<h2 class="text-center mb-4">Login</h2>
<form action="/auth/login" method="POST" id="AuthForm">
<div class="mb-3">
<label for="username" class="form-label">Username</label>
<input type="text" class="form-control" id="username" name="username" required>
<div id="AuthForm-error-username" class="error d-none"></div>
</div>
<div class="mb-3">
<label for="password" class="form-label">Password</label>
<input type="password" class="form-control" id="password" name="password" required>
<div id="AuthForm-error-password" class="error d-none"></div>
</div>
<button type="submit" class="btn btn-primary w-100">Login</button>
<div id="AuthForm-error-global" class="error d-none"></div>
</form>
<p class="text-center mt-3">
Don't have an account? <a href="/auth/register">Register</a>
</p>
</div>
</div>
</div>
`
}) %>

<script>
    setupRealTimeValidation()
    document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("AuthForm");
        if (form) {
            form.addEventListener("submit", function (e) {
                submit(e);
            });
        }
    });
</script>

